Flight ID: <%= @selected_flight.id %>
From: <%= @selected_flight.from_airport.code  %>
To: <%= @selected_flight.to_airport.code %>
On: <%=@selected_flight.scheduled_on.strftime("%m/%d/%Y") %>


<%= form_with model: @booking, local: true do |f| %>
    <% i = 1 %>
    <%= f.fields_for :passengers do |passenger_data| %>
    <%= "Passenger #{i} information" %>
    <div>
    <%= f.label :name %>
    <%= passenger_data.text_field :name %>
    </div>
    <div>
    <%= f.label :email %>
    <%= passenger_data.email_field :email %>
    </div>
    <% i += 1 %>
    <% end %>
    <%= f.hidden_field :flight_id, value: @selected_flight.id %>
    <%= f.submit %>
<% end %> 

