<%= form_with(url: "/flights", method: :get, local: true) do |f| %>
<%= select_tag(:from_airport_id, options_for_select(@airport_options)) %>
<%= select_tag(:to_airport_id, options_for_select(@airport_options)) %>
<%= select_tag(:num_passengers, options_for_select(@passenger_options)) %>
<%= select_tag(:scheduled_on, options_for_select(@datetime_options)) %>
<%= f.submit "Search for flight" %>
<% end %>